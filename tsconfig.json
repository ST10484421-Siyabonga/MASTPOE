{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "lib": ["ESNext"]
  },
  "include": ["src", "App.tsx", "App.ts", "index.tsx", "index.ts"]
}